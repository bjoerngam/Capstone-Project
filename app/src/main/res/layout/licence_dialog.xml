<?xml version="1.0" encoding="utf-8"?>
<agency.tango.materialintroscreen.parallax.ParallaxLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/licence_dialog_padding_bottom">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/licence_dialog_scrollview_height"
        android:layout_margin="@dimen/licence_dialog_scrollview_margin"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="@dimen/licence_textSize"
                android:textStyle="bold"
                android:text="@string/about_infoslide_headline" />

            <TextView
                android:id="@+id/licenceTextView"
                android:paddingTop="@dimen/licence_dialog_padding_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart" />

        </LinearLayout>

    </ScrollView>

</agency.tango.materialintroscreen.parallax.ParallaxLinearLayout>
